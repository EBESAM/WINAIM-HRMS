@model IEnumerable<New_WebApllication.Models.PerformanceReview>

@{
    ViewBag.Title = "Performance Reviews";
}

<h2>Performance Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
